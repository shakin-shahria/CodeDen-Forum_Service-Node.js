<style>


/* Styles for the container */
       
                
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap");

:root {
  --primary-color:#FFAE42;
  --primary-color-dark: #0f1e6a;
  --secondary-color: #f9fafe;
  --text-color: #333333;
  --white: #ffffff;
  --max-width: 1300px;
}

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  font-family: "Poppins", sans-serif;
  background-color: var(--secondary-color);
}

      .big-container{

        height: 800px;
        width: 100%;
        display: flex;
       margin-top: 2px;

      }

      .right-container{

        height: 100%;
        width: 50%;
        background-color: pink;



      }

        .left-container {
            height: 100%;
            width: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #0f1e6a;
            padding-top: 8%;
        }
    
        /* Styles for the heading */
        .heading {
            margin-bottom: 20px;
           
        }
        .heading a{
            background-color: #fff;
            border-radius: 2px;
        }
    
        /* Styles for the form */
        .form {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    
        
    
        /* Styles for the form container */
        .form_container {
            width: 300px; /* Adjust as needed */
        }
    
        /* Styles for the form elements */
        .form_container input[type="text"],
        .form_container textarea {
            width: 100%;
            margin-bottom: 10px;
            padding: 8px;
            box-sizing: border-box;
        }
    
        /* Styles for the submit button */
        .form_container .btn {
            width: 100%;
            padding: 10px;
            background-color: dodgerblue; /* Just for demonstration */
            color: white;
            border: none;
            cursor: pointer;
        }



        /* Nav-bar related CSS */
          



/* Nav-bar related CSS */
nav {
  max-width: var(--max-width);
  margin: auto;
  padding: 1rem;
  height: 55px;
  display: flex;
  align-items: center;
  justify-content: space-between;
   border-bottom: 1px solid black; 
  width:100%;
  
}

.nav__logo a {
  font-size: 1.5rem;
  font-weight: 500;
  color: var(--primary-color);
  text-decoration: none;
  transition: 0.3s;
}

.nav__links {
  list-style: none;
  display: flex;
  align-items: center;
  gap: 1rem;
  background-color:white;
  
}

.link a {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  font-weight: 500;
  color: var(--text-color);
  text-decoration: none;
  transition: 0.3s;
  
}

.link a:hover {
  color: var(--primary-color);
  text-decoration: underline;

}

.link a:hover,
.nav__links .link a:hover {
  color: var(--primary-color);
  text-decoration: underline;
}

.link .nav__btn {
  padding: 0.5rem 2rem;
  color: var(--white) !important;
  background-color: var(--primary-color);
  border-radius: 5px;
}



/* Footer related CSS */
footer {
  background-color: #696969   ;
  color: #D9D9D9;
  padding: 20px;
  
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}

.footer-content p {
  margin: 0;
}

.footer-content ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-content ul li {
  display: inline;
  margin-right: 10px;
}

.footer-content ul li:last-child {
  margin-right: 0;
}

.footer-content ul li a {
  color: #fff;
  text-decoration: none;
}

.footer-content ul li a:hover {
  text-decoration: underline;
}



 </style>
    
</head>
